<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="80dp">

            <!-- Home Section (Default Visible) -->
            <LinearLayout
                android:id="@+id/homeSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="parent">

                <!-- 1. App Bar (Top Section) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAppBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="#F8F9FF"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="16dp">

                        <!-- User Profile Section -->
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgUserProfile"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/default_profile"
                            app:civ_border_color="#7B68EE"
                            app:civ_border_width="2dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:id="@+id/txtUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text=""
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:fontFamily="@font/poppins_medium"
                            app:layout_constraintStart_toEndOf="@id/imgUserProfile"
                            app:layout_constraintTop_toTopOf="@id/imgUserProfile"/>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progressUserLevel"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="4dp"
                            app:indicatorColor="#7B68EE"
                            app:trackColor="#E0E0E0"
                            app:trackThickness="4dp"
                            app:trackCornerRadius="2dp"
                            android:progress="68"
                            app:layout_constraintStart_toEndOf="@id/imgUserProfile"
                            app:layout_constraintTop_toBottomOf="@id/txtUserName"/>

                        <!-- Streak Indicator -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardStreak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#FFF3E0"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_streak_fire"
                                    app:tint="#FF8C00"/>

                                <TextView
                                    android:id="@+id/txtStreakCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="7 Day Streak"
                                    android:textSize="12sp"
                                    android:textColor="#FF8C00"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_marginStart="4dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Notification Bell -->
                        <ImageView
                            android:id="@+id/imgNotificationBell"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_notification"
                            app:tint="#7B68EE"
                            android:layout_marginEnd="12dp"
                            app:layout_constraintEnd_toStartOf="@id/cardStreak"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- 2. Hero Section (Dynamic Welcome Banner) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardHeroBanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#EDE7F6">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/txtWelcomeMessage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="20sp"
                            android:textColor="#5E35B1"
                            android:fontFamily="@font/poppins_semibold"
                            android:alpha="0.95"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="80dp"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardDailyTrivia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F5F0FF"
                            app:layout_constraintTop_toBottomOf="@id/txtWelcomeMessage"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ§  Daily Trivia"
                                    android:textSize="14sp"
                                    android:textColor="#7B68EE"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_marginBottom="8dp"/>

                                <TextView
                                    android:id="@+id/txtDailyTrivia"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Which planet in our solar system has the most moons?"
                                    android:textSize="16sp"
                                    android:textColor="#333333"
                                    android:fontFamily="@font/poppins_regular"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_hero_decoration"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- 3. Generate Quiz Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardGenerateQuiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#E1F5FE">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/txtGenerateQuizTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ§  Generate Quiz"
                            android:textSize="18sp"
                            android:textColor="#0277BD"
                            android:fontFamily="@font/poppins_bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/txtGenerateQuizDescription"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Generate an AI-powered quiz tailored to your preferences."
                            android:textSize="14sp"
                            android:textColor="#424242"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginTop="4dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txtGenerateQuizTitle"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnGenerateQuiz"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Generate Quiz"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingVertical="12dp"
                            android:layout_marginTop="16dp"
                            app:cornerRadius="12dp"
                            app:backgroundTint="#4FC3F7"
                            app:icon="@drawable/ic_generate_quiz"
                            app:iconGravity="textStart"
                            app:layout_constraintTop_toBottomOf="@id/txtGenerateQuizDescription"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- 4. Quiz From PDF Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardQuizFromPDF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFF3E0">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/txtQuizFromPDFTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“„ Quiz From PDF"
                            android:textSize="18sp"
                            android:textColor="#FF8C00"
                            android:fontFamily="@font/poppins_bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/txtQuizFromPDFDescription"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Upload a PDF and generate a quiz from its content."
                            android:textSize="14sp"
                            android:textColor="#424242"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginTop="4dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txtQuizFromPDFTitle"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnQuizFromPDF"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Upload PDF"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingVertical="12dp"
                            android:layout_marginTop="16dp"
                            app:cornerRadius="12dp"
                            app:backgroundTint="#FFB74D"
                            app:icon="@drawable/ic_pdf_upload"
                            app:iconGravity="textStart"
                            app:layout_constraintTop_toBottomOf="@id/txtQuizFromPDFDescription"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- 5. Quick Quiz Categories -->
                <TextView
                    android:id="@+id/txtCategoriesHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quiz Categories"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerCategories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="1"
                    tools:listitem="@layout/item_category"/>

                <!-- 6. AI-Recommended Quizzes -->
                <TextView
                    android:id="@+id/txtRecommendedHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommended for You"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerRecommended"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_recommended_quiz"/>

                <!-- 7. Challenge & Battle Mode Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBattleMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="#E1F5FE">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/txtBattleTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âš”ï¸ Battle Mode"
                            android:textSize="18sp"
                            android:textColor="#0277BD"
                            android:fontFamily="@font/poppins_bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/txtBattleDescription"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Challenge friends and compete for the top spot!"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginTop="4dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txtBattleTitle"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@id/txtBattleDescription">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnChallengeFriends"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Challenge Friends"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppins_medium"
                                android:paddingVertical="12dp"
                                app:cornerRadius="12dp"
                                app:backgroundTint="#4FC3F7"
                                app:icon="@drawable/ic_challenge"
                                app:iconGravity="textStart"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnLeaderboard"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Leaderboard"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppins_medium"
                                android:paddingVertical="12dp"
                                android:layout_marginStart="12dp"
                                app:cornerRadius="12dp"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                app:strokeColor="#4FC3F7"
                                app:strokeWidth="2dp"
                                android:textColor="#0277BD"
                                app:icon="@drawable/ic_leaderboard"
                                app:iconGravity="textStart"
                                app:iconTint="#0277BD"/>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- 8. Progress & Achievements Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/txtProgressTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Progress"
                            android:textSize="18sp"
                            android:textColor="#333333"
                            android:fontFamily="@font/poppins_semibold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardChartContainer"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardCornerRadius="60dp"
                            app:cardElevation="0dp"
                            app:layout_constraintTop_toBottomOf="@id/txtProgressTitle"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="16dp">

                            <FrameLayout
                                android:id="@+id/chartContainer"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="4dp">
                                <!-- Pie chart will be added here programmatically -->
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/cardChartContainer"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/cardChartContainer"
                            app:layout_constraintBottom_toBottomOf="@id/cardChartContainer">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <View
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:background="@drawable/circle_shape"
                                    android:backgroundTint="#7B68EE"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Completed: "
                                    android:textSize="14sp"
                                    android:textColor="#757575"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_marginStart="8dp"/>

                                <TextView
                                    android:id="@+id/txtCompletedQuizzes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="42"
                                    android:textSize="14sp"
                                    android:textColor="#333333"
                                    android:fontFamily="@font/poppins_medium"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <View
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:background="@drawable/circle_shape"
                                    android:backgroundTint="#4FC3F7"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="In Progress: "
                                    android:textSize="14sp"
                                    android:textColor="#757575"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_marginStart="8dp"/>

                                <TextView
                                    android:id="@+id/txtInProgressQuizzes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:textSize="14sp"
                                    android:textColor="#333333"
                                    android:fontFamily="@font/poppins_medium"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:background="@drawable/circle_shape"
                                    android:backgroundTint="#E0E0E0"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Not Started: "
                                    android:textSize="14sp"
                                    android:textColor="#757575"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_marginStart="8dp"/>

                                <TextView
                                    android:id="@+id/txtNotStartedQuizzes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="23"
                                    android:textSize="14sp"
                                    android:textColor="#333333"
                                    android:fontFamily="@font/poppins_medium"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Trophy Showcase -->
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:layout_marginTop="20dp"
                            app:layout_constraintTop_toBottomOf="@id/cardChartContainer">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    app:cardCornerRadius="35dp"
                                    app:cardElevation="2dp"
                                    app:cardBackgroundColor="#FFF9C4"
                                    android:layout_marginEnd="12dp">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/ic_trophy_gold"
                                        android:layout_gravity="center"/>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    app:cardCornerRadius="35dp"
                                    app:cardElevation="2dp"
                                    app:cardBackgroundColor="#E1F5FE"
                                    android:layout_marginEnd="12dp">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/ic_trophy_silver"
                                        android:layout_gravity="center"/>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    app:cardCornerRadius="35dp"
                                    app:cardElevation="2dp"
                                    app:cardBackgroundColor="#FFECB3"
                                    android:layout_marginEnd="12dp">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/ic_trophy_bronze"
                                        android:layout_gravity="center"/>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    app:cardCornerRadius="35dp"
                                    app:cardElevation="2dp"
                                    app:cardBackgroundColor="#E8F5E9"
                                    android:layout_marginEnd="12dp">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/ic_trophy_streak"
                                        android:layout_gravity="center"/>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    app:cardCornerRadius="35dp"
                                    app:cardElevation="2dp"
                                    app:cardBackgroundColor="#EDE7F6">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/ic_trophy_locked"
                                        android:layout_gravity="center"
                                        android:alpha="0.5"/>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </HorizontalScrollView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Saved Section (Initially Hidden) -->
            <LinearLayout
                android:id="@+id/savedSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saved Quizzes"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"/>

                <!-- Add your saved content here -->
            </LinearLayout>

            <!-- Stats Section (Initially Hidden) -->
            <LinearLayout
                android:id="@+id/statsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Stats"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"/>

                <!-- Add your stats content here -->
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 9. Bottom Navigation Bar -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabCradleMargin="8dp"
        app:fabCradleRoundedCornerRadius="16dp"
        app:fabCradleVerticalOffset="6dp"
        app:backgroundTint="@color/white"
        app:elevation="8dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            app:elevation="0dp"
            app:menu="@menu/bottom_nav_menu" />

    </com.google.android.material.bottomappbar.BottomAppBar>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
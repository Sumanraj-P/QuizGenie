<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Light -->
    <style name="Theme.QuizGenie" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_light</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Material 3 specific attributes -->
        <item name="materialButtonStyle">@style/Widget.QuizGenie.Button</item>
        <item name="textInputStyle">@style/Widget.QuizGenie.TextInputLayout</item>
    </style>

    <!-- Dark theme -->
    <style name="Theme.QuizGenie.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_dark</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#B3FFFFFF</item>

        <!-- Material 3 specific attributes -->
        <item name="materialButtonStyle">@style/Widget.QuizGenie.Button</item>
        <item name="textInputStyle">@style/Widget.QuizGenie.TextInputLayout</item>
    </style>

    <!-- Custom button style -->
    <style name="Widget.QuizGenie.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim</item>
    </style>

    <!-- Custom TextInputLayout style -->
    <style name="Widget.QuizGenie.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <!-- Text appearance styles -->
    <style name="TextAppearance.QuizGenie.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextAppearance.QuizGenie.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
    </style>
</resources>